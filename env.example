# =====================================================
# WOJAT PLATFORM - ENVIRONMENT VARIABLES
# =====================================================
# Copy this file to .env and fill in your actual values
# For Render deployment, add these in your Render dashboard

# =====================================================
# CORE CONFIGURATION
# =====================================================
NODE_ENV=production
PORT=3000

# =====================================================
# AI SERVICES
# =====================================================
# OpenAI API Key for AI agent functionality
OPENAI_API_KEY=your_openai_api_key_here

# =====================================================
# DATABASE (SUPABASE)
# =====================================================
# Supabase project URL and API keys
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =====================================================
# BLOCKCHAIN DATA (BITQUERY)
# =====================================================
# Bitquery API for Solana blockchain data
BITQUERY_API_KEY=your_bitquery_api_key_here
ACCESS_TOKEN=your_bitquery_access_token_here

# =====================================================
# TWITTER INTEGRATION
# =====================================================
# Twitter API v2 credentials for social media automation
CONSUMER_KEY=your_twitter_consumer_key_here
CONSUMER_SECRET=your_twitter_consumer_secret_here
ZORO_ACCESS_TOKEN=your_twitter_access_token_here
ZORO_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# =====================================================
# SOLANA INTEGRATION
# =====================================================
# Solana wallet and RPC configuration for trading
SOLANA_PRIVATE_KEY=your_base58_private_key_here
SOLANA_PUBLIC_KEY=your_public_key_here
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_CLUSTER=mainnet-beta

# =====================================================
# ENHANCED RPC SERVICES (OPTIONAL)
# =====================================================
# Enhanced RPC services for better performance
HELIUS_API_KEY=your_helius_api_key_here
BIRDEYE_API_KEY=your_birdeye_api_key_here
QUICKNODE_API_KEY=your_quicknode_api_key_here

# =====================================================
# TELEGRAM INTEGRATION (OPTIONAL)
# =====================================================
# Telegram bot for community management
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=your_telegram_channel_id_here
TELEGRAM_GROUP_ID=your_telegram_group_id_here

# =====================================================
# DISCORD INTEGRATION (OPTIONAL)
# =====================================================
# Discord bot for community management
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here
DISCORD_ANNOUNCEMENT_CHANNEL_ID=your_announcement_channel_id_here
DISCORD_TRADING_CHANNEL_ID=your_trading_channel_id_here
DISCORD_VOICE_CHANNEL_ID=your_voice_channel_id_here

# =====================================================
# REDIS (OPTIONAL)
# =====================================================
# Redis for caching and session management
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# =====================================================
# MONITORING & ANALYTICS (OPTIONAL)
# =====================================================
# Analytics and monitoring services
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here
SENTRY_DSN=your_sentry_dsn_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# =====================================================
# SECURITY (OPTIONAL)
# =====================================================
# Security and encryption
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
CORS_ORIGIN=https://your-domain.com

# =====================================================
# RATE LIMITING (OPTIONAL)
# =====================================================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# LOGGING (OPTIONAL)
# =====================================================
# Logging configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# =====================================================
# FEATURE FLAGS (OPTIONAL)
# =====================================================
# Feature toggles for different functionality
ENABLE_TRADING=true
ENABLE_SOCIAL_MEDIA=true
ENABLE_ANALYTICS=true
ENABLE_VOICE_INTEGRATION=true
ENABLE_NOTIFICATIONS=true

# =====================================================
# EXTERNAL APIS (OPTIONAL)
# =====================================================
# Additional external API integrations
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here
DEFI_PULSE_API_KEY=your_defi_pulse_api_key_here

# =====================================================
# EMAIL (OPTIONAL)
# =====================================================
# Email service for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here
FROM_EMAIL=noreply@wojat.com

# =====================================================
# FILE STORAGE (OPTIONAL)
# =====================================================
# File storage for images and documents
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=wojat-storage

# =====================================================
# WEBHOOKS (OPTIONAL)
# =====================================================
# Webhook URLs for external integrations
WEBHOOK_URL=your_webhook_url_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# =====================================================
# DEVELOPMENT (OPTIONAL)
# =====================================================
# Development-specific settings
DEBUG=false
VERBOSE_LOGGING=false
MOCK_EXTERNAL_APIS=false
